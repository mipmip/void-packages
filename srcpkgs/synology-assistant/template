# Template file for 'synology-assistant'
pkgname=synology-assistant
version=6.2
_pkgver=6.2-24922
revision=1
_filename="synology-assistant_${_pkgver}_amd64.deb"
archs="x86_64"
create_wrksrc=yes
build_style=fetch
hostmakedepends="curl w3m libcurl"
depends="GConf libcurl"
short_desc="It helps you set up and install DSM on your DiskStation"
maintainer="Pim Snel pim@pimsnel.com"
license="custom:Proprietary"
homepage="https://www.synology.com"
distfiles="https://global.download.synology.com/download/Tools/Assistant/${_pkgver}/Ubuntu/x86_64/synology-assistant_${_pkgver}_amd64.deb"
checksum=abb0770d8574e38173deae0eafbe98c2b50a83e6ccf05eebad3e4ed1ccb855c3
repository=nonfree
restricted=yes
nostrip=yes

do_build() {
	ar x "${_filename}"
	bsdtar -xf data.tar.gz
}

do_install() {
#	vbin "usr/bin/synology-assistant"

	vmkdir opt
	vmkdir opt/Synology
	vmkdir opt/Synology/SynologyAssistant
  vcopy opt/Synology/SynologyAssistant /opt/Synology

	vmkdir usr/share/applications
	vcopy usr/share/applications/synology-assistant.desktop "/usr/share/applications/synology-assistant.desktop"

}
